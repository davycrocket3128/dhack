<?xml version="1.0" encoding="utf-8"?>
<XnaContent xmlns:ns="Microsoft.Xna.Framework">
  <Asset Type="ThePeacenet.Backend.AssetTypes.ProgramData">
    <Name>Terminal</Name>
    <Description>Run commands in a Unix shell environment.</Description>
    <LauncherCategory>System</LauncherCategory>
    <LauncherIcon>Gui/Icons/terminal</LauncherIcon>

    <Gui>
      <EventHandlerClass>ThePeacenet.GuiHandlers.Terminal</EventHandlerClass>

      <WindowEvents>
        <Event>
          <Name>Load</Name>
          <Handler>Terminal_Load</Handler>
        </Event>
      </WindowEvents>
      
      <Content>
        <Name>Blur</Name>
        <Type>ThePeacenet.Gui.Controls.BackgroundBlur</Type>
        <Children>
          <Child>
            <Name>Console</Name>
            <Type>ThePeacenet.Console.ConsoleControl</Type>

            <Properties>
              <Property>
                <Name>StyleClass</Name>
                <Value Type="String">WindowTerminal</Value>
              </Property>
            </Properties>
          </Child>
        </Children>
      </Content>
    </Gui>
  </Asset>
</XnaContent>
