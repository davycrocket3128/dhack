<?xml version="1.0" encoding="utf-8"?>
<XnaContent xmlns:ns="Microsoft.Xna.Framework">
  <Asset Type="ThePeacenet.Gui.GuiSkin">
    <Elements>
      <!-- CONSOLE CONTROLS -->
      <Element>
        <Control>ThePeacenet.Console.ConsoleControl</Control>

        <Styles>
          <!-- Default style -->
          <Style>
            <States>
              <State>
                <!-- Default state -->
                <Brushes>
                  <Brush>
                    <Name>BackgroundBrush</Name>
                    <Color>
                      <Red>0</Red>
                      <Green>0</Green>
                      <Blue>0</Blue>
                      <Alpha>255</Alpha>
                    </Color>
                  </Brush>
                </Brushes>
              </State>
            </States>
          </Style>
          <!-- Terminal's console control -->
          <Style>
            <Name>WindowTerminal</Name>
            <States>
              <State>
                <!-- Default state -->
                <Brushes>
                  <Brush>
                    <Name>BackgroundBrush</Name>
                    <Color>
                      <Red>0</Red>
                      <Green>0</Green>
                      <Blue>0</Blue>
                      <Alpha>48</Alpha>
                    </Color>
                  </Brush>
                </Brushes>
              </State>
            </States>
          </Style>
        </Styles>
      </Element>
    </Elements>    
  </Asset>
</XnaContent>
